<div class="row">
<div class="col">
<%= form_with scope: :person_date, url: person_dates_path, local: true do |form| %>
  <p>
    <%= form.label :fecha %><br>
    <%= form.date_field :date, value: Date.tomorrow%>
  </p>

  <p>
    <%= form.label :hora %><br>
    <%= form.select :time, %w[8:00 8:15 8:30 8:45 9:00 9:15 9:30 9:45 10:00 10:15 10:30 10:45 11:00 11:15 11:30 11:45 12:00 12:15 12:30 12:45 13:00 13:15 13:30 13:45 14:00 14:15 14:30 14:45 15:00 15:15 15:30 15:45 16:00].map{|value| [value,value]}  %>
  </p>

  <p>
    <%= form.label :medico %><br>
    <%= form.collection_select :medic_id, Medic.all, :id , :name %>
  </p>

  <% if params[:id] %>
    <%= form.text_field :person_id, value: params[:id], class: 'hidden' %>
  <% else %>

  <p>
    <%= form.label :persona %><br>
    <%= form.collection_select :person_id, Person.all, :id, :name %>

  </p>
    <% end %>

  <p>
    <%= form.submit :Agendar%>
  </p>

<% end %>
  </div>
  <div class="col-6">
      <%= render template:'layouts/template_calendar', locals: {medics: Medic.all, person_dates: PersonDate.all, type: "agendaDay" }%>

  </div>
</div>